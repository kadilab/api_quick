voici ma fonction :   const handleSubmit = () => {
    if (!carType || !serviceType) {
      Alert.alert(
        "Erreur",
        "Veuillez sélectionner le type de voiture et le service."
      );
      return;
    }

    const serviceMessage =
      serviceType === "location" ? `${hours} heures` : "1 service";
    Alert.alert(
      "Réservation confirmée",
      `custoner: ${user.id}\nType de voiture: ${carType}\nService: ${serviceType}\nDurée: ${serviceMessage}\nPrix total: $${totalPrice} lat: ${selectedLocation.latitude}\nlon ${selectedLocation.longitude}`
    );
    setShowModal(false); // Ferme le modal
  };

